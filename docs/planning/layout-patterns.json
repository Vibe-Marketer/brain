{
  "name": "Layout Patterns",
  "description": "Layout structures and patterns extracted from Microsoft Loop UI analysis",
  "version": "1.0.0",
  
  "patterns": [
    {
      "name": "Three-Panel Layout",
      "description": "Primary layout pattern with sidebar, context panel, and main content",
      "structure": {
        "panels": [
          {
            "name": "Primary Sidebar",
            "position": "left",
            "width": "240px",
            "widthCollapsed": "48px",
            "behavior": "collapsible",
            "scroll": "independent",
            "content": [
              "Application logo/home link",
              "Global navigation sections",
              "User preferences",
              "Collapse toggle"
            ]
          },
          {
            "name": "Context Panel",
            "position": "middle",
            "width": "280px",
            "behavior": "closable, appears contextually",
            "scroll": "independent",
            "content": [
              "Hierarchical content lists",
              "Filters and sorting controls",
              "Creation actions",
              "Close button"
            ]
          },
          {
            "name": "Main Content",
            "position": "right",
            "width": "flexible (fills remaining space)",
            "behavior": "always visible",
            "scroll": "independent",
            "content": [
              "Content header",
              "Primary content area",
              "Action bars",
              "Footer (optional)"
            ]
          }
        ],
        "responsive": {
          "desktop": "All three panels visible",
          "tablet": "Sidebar + content, context panel becomes overlay",
          "mobile": "Single panel, sidebar becomes hamburger menu"
        }
      },
      "useCases": [
        "Workspace interior view",
        "Call detail view with call list",
        "Team view with member list",
        "Tag view with tag list"
      ]
    },
    
    {
      "name": "Two-Panel Layout",
      "description": "Simplified layout with sidebar and main content only",
      "structure": {
        "panels": [
          {
            "name": "Primary Sidebar",
            "position": "left",
            "width": "240px",
            "widthCollapsed": "48px",
            "behavior": "collapsible",
            "scroll": "independent"
          },
          {
            "name": "Main Content",
            "position": "right",
            "width": "flexible",
            "behavior": "always visible",
            "scroll": "independent"
          }
        ],
        "responsive": {
          "desktop": "Both panels visible",
          "tablet": "Sidebar collapsible, content fills space",
          "mobile": "Single panel, sidebar becomes overlay"
        }
      },
      "useCases": [
        "Home/dashboard view",
        "Calls library view",
        "Search results view"
      ]
    },
    
    {
      "name": "Single-Panel Layout",
      "description": "Full-width content without persistent sidebars",
      "structure": {
        "panels": [
          {
            "name": "Main Content",
            "position": "center",
            "width": "100% or max-width constrained",
            "behavior": "always visible",
            "scroll": "standard"
          }
        ],
        "responsive": {
          "all": "Single panel adapts to viewport width"
        }
      },
      "useCases": [
        "Search modal (full-screen overlay)",
        "Authentication pages",
        "Onboarding flows"
      ]
    },
    
    {
      "name": "Header System",
      "description": "Multi-tier header structure for global and contextual controls",
      "tiers": [
        {
          "name": "Global Header",
          "position": "top, fixed",
          "height": "56px",
          "zIndex": 1200,
          "zones": {
            "left": ["Logo/home link"],
            "center": ["Global search (optional)"],
            "right": ["Notifications", "User menu"]
          },
          "behavior": "Always visible, scrolls with page or fixed"
        },
        {
          "name": "View Header",
          "position": "below global header",
          "height": "48px",
          "zIndex": 1100,
          "zones": {
            "left": ["View tabs or breadcrumbs"],
            "center": ["View title (optional)"],
            "right": ["View actions (filters, sort, view mode)"]
          },
          "behavior": "Sticky or static, context-dependent"
        },
        {
          "name": "Content Header",
          "position": "within main content area",
          "height": "variable",
          "zIndex": 0,
          "zones": {
            "left": ["Content title", "Metadata"],
            "right": ["Content actions (share, edit, delete)"]
          },
          "behavior": "Scrolls with content"
        }
      ]
    },
    
    {
      "name": "Navigation Hierarchy",
      "description": "Three-level navigation pattern for progressive disclosure",
      "levels": [
        {
          "level": 1,
          "name": "Application Sections",
          "location": "Primary sidebar",
          "examples": ["Recent", "Starred", "Workspaces", "Teams", "Tags"],
          "behavior": "Always visible (unless sidebar collapsed)",
          "interaction": "Click to navigate or expand"
        },
        {
          "level": 2,
          "name": "Content Lists",
          "location": "Context panel (middle panel)",
          "examples": ["Workspace pages", "Team members", "Tagged calls"],
          "behavior": "Appears when Level 1 item selected",
          "interaction": "Click to show detail in main content"
        },
        {
          "level": 3,
          "name": "Content Detail",
          "location": "Main content area",
          "examples": ["Page content", "Call transcript", "User profile"],
          "behavior": "Displays when Level 2 item selected",
          "interaction": "View, edit, or interact with content"
        }
      ]
    },
    
    {
      "name": "Content Canvas",
      "description": "Block-based content structure for rich editing",
      "structure": {
        "header": {
          "coverImage": "optional, full-width",
          "icon": "optional, emoji or custom",
          "title": "large, editable inline",
          "metadata": "timestamp, author, etc."
        },
        "body": {
          "blocks": [
            "Text paragraphs",
            "Headings (H1-H3)",
            "Lists (bulleted, numbered, checklist)",
            "Quotes",
            "Code blocks",
            "Dividers",
            "Images",
            "Videos (embedded)",
            "Tables",
            "Callouts"
          ],
          "interactions": {
            "addBlock": "+ button between blocks or / command",
            "dragHandle": "⋮⋮ icon on left, appears on hover",
            "blockMenu": "right-click or ... button for block actions"
          }
        }
      },
      "useCases": [
        "Page editing in workspace",
        "Rich text notes or documents"
      ]
    },
    
    {
      "name": "Table Layout",
      "description": "Structured data display with header and rows",
      "structure": {
        "header": {
          "columns": "array of column definitions",
          "sortIndicators": "arrow icons for sortable columns",
          "filters": "optional filter controls per column",
          "selectAll": "optional checkbox for multi-select"
        },
        "body": {
          "rows": "array of data rows",
          "rowHeight": "40-48px",
          "cellPadding": "12px horizontal",
          "hoverState": "subtle background highlight",
          "selectedState": "stronger background color"
        },
        "footer": {
          "pagination": "page numbers and navigation",
          "rowCount": "total and visible row count"
        }
      },
      "columnTypes": {
        "text": "left-aligned, truncated with ellipsis",
        "number": "right-aligned, formatted",
        "date": "left-aligned, relative or absolute",
        "status": "badge or icon with text",
        "actions": "icon buttons, right-aligned"
      },
      "useCases": [
        "Calls library table",
        "Recent pages list",
        "Team members table"
      ]
    },
    
    {
      "name": "Card Grid",
      "description": "Visual grid of content cards",
      "structure": {
        "grid": {
          "columns": "auto-fit or fixed (2-4 columns)",
          "gap": "16-24px",
          "cardWidth": "200-300px",
          "cardHeight": "variable or fixed aspect ratio"
        },
        "card": {
          "coverImage": "optional, 16:9 or 4:3 ratio",
          "title": "bold, 16-18px, 1-2 lines",
          "metadata": "small text, 12-14px",
          "actions": "icon buttons on hover"
        }
      },
      "responsive": {
        "desktop": "3-4 columns",
        "tablet": "2-3 columns",
        "mobile": "1-2 columns"
      },
      "useCases": [
        "Workspace grid view",
        "Media gallery",
        "Dashboard widgets"
      ]
    },
    
    {
      "name": "Split View",
      "description": "Side-by-side content display",
      "structure": {
        "left": {
          "width": "50% or flexible",
          "content": "Primary content or list",
          "scroll": "independent"
        },
        "right": {
          "width": "50% or flexible",
          "content": "Secondary content or detail",
          "scroll": "independent"
        },
        "divider": {
          "width": "1px or draggable handle",
          "behavior": "resizable (optional)"
        }
      },
      "useCases": [
        "Code editor with preview",
        "Email list with message detail",
        "Compare views"
      ]
    },
    
    {
      "name": "Modal Overlay",
      "description": "Focused interaction layer above main content",
      "structure": {
        "backdrop": {
          "background": "rgba(0, 0, 0, 0.5)",
          "zIndex": 1300,
          "behavior": "click to close (optional)"
        },
        "container": {
          "position": "centered",
          "maxWidth": "600-800px",
          "borderRadius": "12px",
          "shadow": "xl",
          "zIndex": 1400
        },
        "content": {
          "header": "title + close button",
          "body": "scrollable content",
          "footer": "action buttons (optional)"
        }
      },
      "variants": [
        {
          "name": "Dialog",
          "size": "sm (400px)",
          "purpose": "Confirmations, alerts"
        },
        {
          "name": "Form",
          "size": "md (600px)",
          "purpose": "Data entry, settings"
        },
        {
          "name": "Detail",
          "size": "lg (800px)",
          "purpose": "Rich content, previews"
        },
        {
          "name": "Full-screen",
          "size": "100% viewport",
          "purpose": "Search, media viewer"
        }
      ]
    },
    
    {
      "name": "Sidebar Panel",
      "description": "Contextual panel sliding from screen edge",
      "structure": {
        "position": "left or right edge",
        "width": "320-480px",
        "height": "100vh",
        "shadow": "xl",
        "zIndex": 1400,
        "animation": "slide in/out"
      },
      "content": {
        "header": "title + close button",
        "body": "scrollable content",
        "footer": "optional action buttons"
      },
      "useCases": [
        "Notifications panel",
        "Settings panel",
        "Filter panel",
        "Comments/activity feed"
      ]
    },
    
    {
      "name": "Empty State",
      "description": "Centered content for empty or zero-data states",
      "structure": {
        "container": {
          "alignment": "centered vertically and horizontally",
          "maxWidth": "400-480px",
          "padding": "32-48px"
        },
        "content": {
          "icon": "large icon or illustration (48-64px)",
          "title": "heading (18-24px)",
          "description": "paragraph (14-16px)",
          "action": "primary button (optional)"
        }
      },
      "useCases": [
        "No search results",
        "Empty workspace",
        "No notifications",
        "First-time user experience"
      ]
    },
    
    {
      "name": "Loading State",
      "description": "Placeholder content while data loads",
      "variants": [
        {
          "name": "Skeleton Screen",
          "description": "Gray placeholder blocks matching content structure",
          "animation": "pulse or shimmer",
          "usage": "Tables, cards, lists"
        },
        {
          "name": "Spinner",
          "description": "Rotating loading indicator",
          "position": "centered or inline",
          "usage": "Buttons, small components"
        },
        {
          "name": "Progress Bar",
          "description": "Linear progress indicator",
          "position": "top of view or inline",
          "usage": "File uploads, long operations"
        }
      ]
    },
    
    {
      "name": "Sticky Elements",
      "description": "Elements that remain visible during scroll",
      "elements": [
        {
          "name": "Sticky Header",
          "position": "top of scroll container",
          "zIndex": 1100,
          "usage": "Table headers, view headers"
        },
        {
          "name": "Sticky Sidebar",
          "position": "left or right of scroll container",
          "zIndex": 1100,
          "usage": "Navigation, filters"
        },
        {
          "name": "Sticky Footer",
          "position": "bottom of scroll container",
          "zIndex": 1100,
          "usage": "Action bars, pagination"
        }
      ]
    },
    
    {
      "name": "Responsive Breakpoints",
      "description": "Layout adaptations for different screen sizes",
      "breakpoints": [
        {
          "name": "Mobile",
          "maxWidth": "768px",
          "layout": "Single column, stacked elements",
          "navigation": "Hamburger menu or bottom tabs",
          "panels": "Full-screen overlays",
          "tables": "Simplified columns or card view"
        },
        {
          "name": "Tablet",
          "minWidth": "768px",
          "maxWidth": "1024px",
          "layout": "Two columns (sidebar + content)",
          "navigation": "Collapsible sidebar",
          "panels": "Side panels or overlays",
          "tables": "Horizontal scroll if needed"
        },
        {
          "name": "Desktop",
          "minWidth": "1024px",
          "maxWidth": "1440px",
          "layout": "Three columns (full panel system)",
          "navigation": "Full sidebar",
          "panels": "All panels visible",
          "tables": "Full table with all columns"
        },
        {
          "name": "Large Desktop",
          "minWidth": "1440px",
          "layout": "Three columns with more spacing",
          "navigation": "Full sidebar with more padding",
          "panels": "Wider panels",
          "tables": "Full table with generous spacing"
        }
      ]
    },
    
    {
      "name": "Scroll Behavior",
      "description": "Independent scroll regions and sync patterns",
      "regions": [
        {
          "name": "Primary Sidebar",
          "scroll": "independent",
          "behavior": "Scrolls if content exceeds viewport height"
        },
        {
          "name": "Context Panel",
          "scroll": "independent",
          "behavior": "Scrolls if list exceeds viewport height"
        },
        {
          "name": "Main Content",
          "scroll": "independent",
          "behavior": "Primary scroll region, most common"
        }
      ],
      "syncPatterns": [
        {
          "name": "Audio-Transcript Sync",
          "description": "Transcript auto-scrolls to current audio position",
          "toggle": "User can enable/disable auto-scroll"
        },
        {
          "name": "Table Horizontal Sync",
          "description": "Header scrolls with table body horizontally",
          "behavior": "Sticky header, synchronized scroll"
        }
      ]
    }
  ]
}
