# ============================================
# SUPABASE CONFIGURATION (Frontend & Backend)
# ============================================

# Frontend only - VITE prefix means these are visible in browser (OK - they're public)
VITE_SUPABASE_URL=https://your-project-id.supabase.co
VITE_SUPABASE_PUBLISHABLE_KEY=your-public-anon-key

# Backend only - These are PRIVATE, never expose to browser
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key
SUPABASE_DB_URL=postgresql://postgres:password@db.your-project-id.supabase.co:5432/postgres
SUPABASE_DB_PASSWORD=your-db-password

# ============================================
# FATHOM OAUTH CONFIGURATION
# ============================================

FATHOM_OAUTH_CLIENT_ID_DEV=your-dev-client-id
FATHOM_OAUTH_CLIENT_SECRET_DEV=your-dev-client-secret
FATHOM_OAUTH_CLIENT_ID_PRODUCTION=your-prod-client-id
FATHOM_OAUTH_CLIENT_SECRET_PRODUCTION=your-prod-client-secret

# ============================================
# ZOOM OAUTH CONFIGURATION
# ============================================

# Get these from Zoom Marketplace (https://marketplace.zoom.us/develop/create)
# Create an OAuth app and configure redirect URI to match your deployment
ZOOM_OAUTH_CLIENT_ID=your-zoom-client-id
ZOOM_OAUTH_CLIENT_SECRET=your-zoom-client-secret

# Webhook verification token (from Zoom Marketplace app "Feature" > "Event Subscriptions")
ZOOM_WEBHOOK_SECRET_TOKEN=your-zoom-webhook-secret-token

# ============================================
# AI API KEYS (Keep private!)
# ============================================

OPENAI_API_KEY=sk-...
ANTHROPIC_API_KEY=sk-ant-...
GEMINI_API_KEY=AIzaSy...

# ============================================
# VERCEL-SPECIFIC
# ============================================

SB_PUBLISHABLE_KEY=sb_publishable_...
SB_SECRET=sb_secret_...

# ============================================
# SENTRY ERROR MONITORING
# ============================================

# Frontend DSN (public, can be in browser)
VITE_SENTRY_DSN=https://xxxx@xxx.ingest.sentry.io/xxx

# Build-time only (for source map uploads, keep private)
SENTRY_ORG=call-vault
SENTRY_PROJECT=call-vault
SENTRY_AUTH_TOKEN=sntrys_xxx...
